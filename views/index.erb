<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>UI</title>
<link rel="stylesheet" href="/css/normalize.css">
<link rel="stylesheet" href="/css/application.css">
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script src="/js/socketio.js"></script>
<script src="/js/hammer.js"></script>
<script src="/js/jquery.hammer.js"></script>
</head>
<body>
  <h1>Title of Project</h1>

  <div class="container">
    <section class="body">
      <div id="main" style="width:700px; margin:0 auto">

        <div class="action">
          <ul id="device_name">
          </ul>
          <ul id="device_type"> <!-- activate, deactivate, on, off, set light-level -->
          </ul>
        </div>

        <div class="reaction">
          <ul id="device_name">
          </ul>
          <ul id="device_type">
          </ul>
        </div>

      </div>
    </section>
  </div>

  <script>
    var socket = io.connect('http://localhost:3001');
    socket.on('news', function (data) {
      console.log(data);
      socket.emit('my other event', { my: 'data' });
    });
    socket.on('newDevice', function(data){
      $('#devices').append('<li class="device">' +data.type+': '+data.name+ '<br> Available actions: ' +data.actions+ '</li>');
      console.log(data);
    });

   $('#devices').hammer().on("tap", ".device", function(event) {
      console.log(this, event);
    });
  </script>
</body>
</html>
