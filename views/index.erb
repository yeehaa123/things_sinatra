<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>UI</title>
<link rel="stylesheet" href="/css/normalize.css">
<link rel="stylesheet" href="/css/application.css">
<link rel="stylesheet" href="/css/animate.css">
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script src="/js/socketio.js"></script>
<script src="/js/hammer.js"></script>
<script src="/js/jquery.hammer.js"></script>
</head>
<body>
  <h1>Thingies</h1>

  <ul id='devices'>

  </ul>

  <script>
    var socket = io.connect('http://localhost:3001');
    socket.on('news', function (data) {
      console.log(data);
      socket.emit('my other event', { my: 'data' });
    });
    socket.on('newDevice', function(device){
      $('#devices').append(
        '<li id="' + device.name + '" class="device">' +
          device.type + ': ' + device.name +
          '<br> Available actions: ' + device.actions +
        '</li>'
      );

      var deviceID = '#' + device.name
      console.log(device.name);
      $(deviceID).addClass('animated bounceIn');

      console.log(device);
    });

   $('#devices').hammer().on("tap", ".device", function(event) {
      console.log(this, event);
    });
  </script>
</body>
</html>
